enum Season {
    SPRING @map("printemps")
    SUMMER @map("été")
    FALL  @map("automne")
    WINTER @map("hiver")
}

model Ingredient {
    id                   String             @id @default(auto()) @map("_id") @db.ObjectId
    
    name                 String             @unique
    season               Season?

    categoryIngredientId String             @db.ObjectId
    categoryIngredient   CategoryIngredient @relation(fields: [categoryIngredientId], references: [id])

    compositions         Composition[]
    shoppingListItems    ShoppingList[]

    @@index([categoryIngredientId])
}
